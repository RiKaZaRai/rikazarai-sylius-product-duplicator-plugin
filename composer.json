{
    "name": "rikazarai/sylius-product-duplicator-plugin",
    "type": "sylius-plugin",
    "description": "Product duplication plugin for Sylius applications.",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "sylius/sylius": "^2.0.8"
    },
    "require-dev": {
        "behat/behat": "^3.7",
        "dmore/behat-chrome-extension": "^1.3",
        "dmore/chrome-mink-driver": "^2.7",
        "friends-of-behat/mink": "^1.8",
        "friends-of-behat/mink-browserkit-driver": "^1.4",
        "friends-of-behat/mink-debug-extension": "^2.0.0",
        "friends-of-behat/mink-extension": "^2.4",
        "friends-of-behat/page-object-extension": "^0.3",
        "friends-of-behat/suite-settings-extension": "^1.0",
        "friends-of-behat/symfony-extension": "^2.1",
        "friends-of-behat/variadic-extension": "^1.3",
        "lchrusciel/api-test-case": "^5.2",
        "matthiasnoback/symfony-dependency-injection-test": "^5.1",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpstan/phpstan-doctrine": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpstan/phpstan-symfony": "^1.0",
        "phpstan/phpstan-webmozart-assert": "^1.0",
        "phpunit/phpunit": "^9.5",
        "sylius-labs/coding-standard": "^4.0",
        "sylius/test-application": "2.0.0-ALPHA.5 || 2.1.0-ALPHA.2",
        "symfony/browser-kit": "^6.4 || ^7.1",
        "symfony/debug-bundle": "^6.4 || ^7.1",
        "symfony/dotenv": "^6.4 || ^7.1",
        "symfony/flex": "^2.0",
        "symfony/intl": "^6.4 || ^7.1",
        "symfony/web-profiler-bundle": "^6.4 || ^7.1",
        "symfony/webpack-encore-bundle": "^2.2"
    },
    "scripts": {
        "analyse": [
            "@composer validate --strict",
            "vendor/bin/phpstan analyse -c phpstan.neon -l max src/",
            "vendor/bin/ecs check src/"
        ],
        "fix": [
            "vendor/bin/ecs check src/ --fix"
        ]
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\ProductDuplicatorPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\App\\ProductDuplicatorPlugin\\": "tests/"
        }
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "symfony/runtime": false,
            "symfony/thanks": false
        },
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "require": "~7.3.0",
            "allow-contrib": false,
            "docker": false
        },
        "public-dir": "vendor/sylius/test-application/public"
    }
}
